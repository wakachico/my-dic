            <%= link_to "Weblio", "#", class: "weblio-link"%>
            <%= link_to "公開ワード", "#", class: "publish-link"%>
          </div>
        </div>
        <div class="pos">
          <p>品詞</p>
          <ul class="hidden">
            <li>形容動詞▼</li>
          </ul>
        </div>
        <div class="meaning">
          <p>和訳</p>
          <textarea name="text" placeholder="和訳"  class="meaning-form" raw=3></textarea>
        </div>
        <div class="genre">
          <p>ジャンル</p>
          <ul class="hidden">
            <li>アニメ▼</li>
          </ul>
        </div>
        <div class="text">
          <p>テキスト</p>
          <textarea name="text" placeholder="テキスト"  class="text-form" raw=3></textarea>
        </div>
        <div class="publish">
          <p><%= image_tag "publish_logo.png", class:"publish-pict" %></p>
          <ul class="hidden">
            <li>○▼</li>
          </ul>
        </div>
        <div class="new-submit">
          <input type="submit" value="追加" class="send">
        </div>
      </form>
